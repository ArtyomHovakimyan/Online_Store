@model IEnumerable<Online_Mobile_Store.Models.Phone>
@{
	ViewData["Title"] = "Phones";
}

@foreach (var p in Model)
{
	<div class="col-sm-4 col-lg-4 col-md-4">
		<div class="thumbnail">
			<img src="~/PhoneImages/@p.ImageUrl" alt="" style="width:200px;height:100px;"/>
			<div class="caption">
				<h3 class="pull-right">@p.Price.ToString("c")</h3>
				<h3>
					<a asp-controller="" asp-action="">@p.Title</a>
				</h3>
				<p>yyyy</p>
			</div>
			<div class="text-right">
				<p class="button">
					<a href="/Phone/Buy/@p.PhoneId"class="btn btn-success">
						BUY
					</a>
				</p>
			</div>
		</div>
	</div>
}

